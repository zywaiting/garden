            <view wx:if="{{showView}}">
              <block wx:for="{{userAddressesNoDefault}}">
                  <view class="item">
                    <navigator url='../orderConfirm/orderConfirm?addressId={{item.id}}&orderNumber={{orderNumber}}'>
                      <view class="left">
                          <view class="uname">
                              {{item.name}}
                          </view>
                      </view>
                      <view class="middle">
                          <view class="phone">
                              {{item.phone}}
                          </view>
                          <view class="addr">
                              {{item.address}}
                          </view>
                      </view>
                    </navigator>
                  </view>
              </block>
            </view>

            <view wx:else>
              <block wx:for="{{userAddressesNoDefault}}">
                <view class="item">
                    <view class="left">
                        <view class="uname">
                            {{item.name}}
                        </view>
                    </view>
                    <view class="middle">
                        <view class="phone">
                            {{item.phone}}
                        </view>
                        <view class="addr">
                            {{item.address}}
                        </view>
                    </view>
                </view>
              </block>
            </view>


        </view>
        <navigator url="../addAddress/addAddress" redirect="true">
          <button class="w-button">＋ 新建地址</button>
        </navigator>
    </view>
</view>
